{
    "name": "srcclr",
    "displayName": "srcclr",
    "description": "",
    "version": "0.0.1",
    "publisher": "jonah",
    "engines": {
        "vscode": "^1.26.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onCommand:srcclr.scanProject"
    ],
    "main": "./out/extension",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Srcclr",
            "properties": {
                "srcclr.profile": {
                    "type": "string",
                    "default": null,
                    "description": "Specifies the profile to use when scanning"
                }
            }
        },
        "commands": [
            {
                "command": "srcclr.scanProject",
                "title": "Srcclr: Scan this project",
                "category": "scan"
            }
        ],
        "menus": {
            "editor/context": [{
                "command": "srcclr.scanProject",
                "alt": "markdown.showPreviewToSide",
                "group": "navigation"
            }]
        }
    },
    "scripts": {
        "vscode:prepublish": "npm run compile",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "postinstall": "node ./node_modules/vscode/bin/install",
        "test": "npm run compile && node ./node_modules/vscode/bin/test"
    },
    "devDependencies": {
        "typescript": "^2.6.1",
        "vscode": "^1.1.21",
        "tslint": "^5.8.0",
        "@types/node": "^8.10.25",
        "@types/mocha": "^2.2.42"
    }
}
